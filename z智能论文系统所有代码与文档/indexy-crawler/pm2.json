{
    "apps": [{
        "name": "indexy-crawler-engine",
        "script": "./index.js",
        "instances" : "4",
        "exec_mode" : "cluster",
        "max_memory_restart": "1G",
        "autorestart": true,
        "out_file": "logs/indexy-crawler-engine.log",
        "error_file": "logs/error.log",
        "log_date_format": "YYYY-MM-DD HH:mm:ss",
        "env": {
          "NODE_ENV": "development",
          "TZ": "Asia/Shanghai",
          "MONITOR_FLAG": "none"
        },
        "env_production" : {
          "NODE_ENV": "production",
          "TZ": "Asia/Shanghai",
          "MONITOR_FLAG": "none"
        }
    }]
}
